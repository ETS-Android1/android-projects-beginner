<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#804fc4"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        app:columnCount="2"
        app:rowCount="4"
        >

        <Button
            android:id="@+id/button1"
            app:layout_gravity="fill"
            android:layout_margin="1dp"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            android:onClick="playPhrase"
            android:textColor="#000444"
            android:tag="doyouspeakenglish"
            android:text="Do you\nspeak English?"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/button2"
            app:layout_gravity="fill"
            android:layout_margin="1dp"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            android:onClick="playPhrase"
            android:textColor="#000444"
            android:tag="goodevening"
            android:text="Good evening"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/button3"
            app:layout_gravity="fill"
            android:layout_margin="1dp"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            android:onClick="playPhrase"
            android:textColor="#000444"
            android:tag="howareyou"
            android:text="How are you?"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/button4"
            app:layout_gravity="fill"
            android:layout_margin="1dp"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            android:onClick="playPhrase"
            android:textColor="#000444"
            android:tag="hello"
            android:text="Hello"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/button5"
            app:layout_gravity="fill"
            android:layout_margin="1dp"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            android:onClick="playPhrase"
            android:textColor="#000444"
            android:tag="ilivein"
            android:text="I live in..."
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/button6"
            app:layout_gravity="fill"
            android:layout_margin="1dp"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            android:onClick="playPhrase"
            android:textColor="#000444"
            android:tag="mynameis"
            android:text="My name is..."
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/button7"
            app:layout_gravity="fill"
            android:layout_margin="1dp"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            android:onClick="playPhrase"
            android:textColor="#000444"
            android:tag="please"
            android:text="Please"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/button8"
            app:layout_gravity="fill"
            android:layout_margin="1dp"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            android:onClick="playPhrase"
            android:textColor="#000444"
            android:tag="welcome"
            android:text="Welcome"
            app:cornerRadius="0dp" />


    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>